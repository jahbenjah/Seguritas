@{
    ViewBag.Title = "Clientes";
}

    <p>
        @Html.ActionLink("Nuevo", "Create","",new { @class = "btn btn-success" })
    </p>

<table id="clientes" class="table table-striped table-sm">
    <thead>
        <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Fecha de modificación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section Scripts{

    <script>
        const uri = 'https://localhost:44387/api/clientes';
        $(document).ready(function () {
            $.getJSON(uri)
                .done(function (data) {
                    $.each(data, function (key, item) {

                        $("#clientes tbody").append(
                            "<tr>"
                            + "<td>" + item.Id + "</td>"
                            + "<td>" + item.Nombre + "</td>"
                            + "<td>" + item.FechaModificacion + "</td>"
                            + "<td>" + "<a href='/Delete'>Eliminar</a> |" + "<a href='/Delete'>Detalles</a>" + "</td>"
                            + "</tr>");
                    });
                });
        });
    </script>
}